@model AboutSection
@{
    ViewData["Title"] = "Edit";
}

<section class="content-main">
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">Məlumatlarda dəyişiklik edin!</h2>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Əsas</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Adı</label>
                            <input asp-for="Name" placeholder="Bura yazın" class="form-control" />
                        </div>
                        <div class="mb-4">
                            <label asp-for="Surname" class="form-label">Soyadı</label>
                            <input asp-for="Surname" placeholder="Bura yazın" class="form-control" />
                        </div>
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">Email ünvanınız</label>
                            <input asp-for="Email" placeholder="Bura yazın" class="form-control" />
                        </div>
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">Tam təsvir</label>
                            <textarea asp-for="Description" placeholder="Bura yazın" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="mb-4">
                            <label asp-for="NumbervsAdress" class="form-label">Nömrə və Ünvan</label>
                            <textarea asp-for="NumbervsAdress" placeholder="Bura yazın" class="form-control" rows="4"></textarea>
                        </div>
                        <button type="submit" class="btn btn-light rounded font-sm mr-5 text-body hover-up">Qaralamada saxlayın</button>
                        <button type="submit" class="btn btn-md rounded font-sm hover-up">Təsdiq et</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

